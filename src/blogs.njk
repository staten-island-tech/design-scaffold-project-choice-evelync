<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style/styles.css">
    <title>blogs</title>
</head>

<body class="purple">
    {% include 'nav.njk' %}
    <button class="color-btn">color theme</button>
    <section class="section-container">
        <ul class="all-articles">
            {%- for post in collections.post | reverse -%}
            <article class="article">
                <div class="article-text">
                    <h3 class="article-title">{{post.data.title}}</h3>
                    <h4 class="article-author">By {{post.data.author}}: {{post.data.date | postDate}}</h4>
                    <img src="{{post.data.image}}" alt="image-preview" class="blog-img">
                    <a class="article-link" href="{{post.url}}">continue reading</a>
                    
                </div>
            </article>

            {%- endfor -%}
        </ul>
    </section>

    <script type="module" src="/index.js"></script>
</body>
</html>