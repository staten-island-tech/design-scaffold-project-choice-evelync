<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/styles.css">
    <title>blogs</title>
</head>

<body class="purple">
    {% include 'nav.njk' %}
    <h1>blogs</h1>
    <section class="section-container">
        <ul class="articles">
            {%- for post in collections.post | reverse -%}
            <article class="article">
                <div class="article-text">
                    <h3 class="article-title">{{post.data.title}}</h3>
                    <h4 class="article-author">By {{post.data.author}}: {{post.data.date | postDate}}</h4>
                    <img src="{{post.data.image}}" alt="image-preview" class="blog-img">
                    <a class="article-link" href="{{post.url}}">continue reading</a>
                    

                </div>
            </article>

            {%- endfor -%}
        </ul>
    </section>

    <script type="module" src="./js/main.js"></script>
</body>
</html>